@model IEnumerable<IP_Project.Models.Career>
@{ViewBag.Title = "Careers";}

<head>
    <link href="@Url.Content("/Content/Stylesheet4.css")" rel="stylesheet">
</head>

<body>
    <div class="banner-card">
        <img src="~/Images/jobapplication.png">
        <div class="banner-text">
            <p class="pt-5 ps-5 pe-5 fs-1 text-white" style="--bs-text-opacity: .8;">Get into the driver’s seat</p>
            <p class="ps-5 fs-5 text-white" style="--bs-text-opacity: .8;">and reshape your future with us today.</p>
        </div>
    </div>

    <div id="jobList" class="mt-3">
        <table id="jobTable">
            <thead>
                <tr>
                    <th>Position title</th>
                    <th>Department</th>
                    <th>Type</th>
                    <th>Location</th>
                </tr>
            </thead>

            @foreach (var job in Model)
            {
                if (job.Availability)
                {
                    <tbody>
                    <td>@job.Job_Title</td>
                    <td>@job.Department</td>
                    <td>@job.Type</td>
                    <td>@job.Location.City</td>
                    </tbody>
                }
            }
            <tbody>
            </tbody>
        </table>
    </div>
</body>

